import sys, nibabel as nb
from mvpa.base.dochelpers import table2string

def ap(l, format):
    """Little helper to enforce consistency"""
    ls = [format % x for x in l]
    return ', '.join(ls)

files = sys.argv[1:]
maxfnlen = max([len(f) for f in files])
t = []
for f in files:
    vol = nb.load(f)
    h = vol.get_header()
    row = []
    row += ["%%-%ds" % maxfnlen % f,
            str(h.get_data_dtype()),
            '@l[%s]' %ap(h.get_data_shape(), '%3g'),
            '@lres: %s' % ap(h.get_zooms(), '%.2g')
            ]
    if (h.has_data_slope or h.has_data_intercept) \
       and h.get_slope_inter() != (1.0, 0.0):
        row += ['@lslope,inter: %s' % ap(h.get_slope_inter(), '%.2g')]
    else:
        row += [ '' ]
    t.append(row)

print(table2string(t))
